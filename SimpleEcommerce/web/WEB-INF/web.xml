    </servlet>
    <servlet>
        <servlet-name>Form1Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Form1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Form2Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Form2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page2Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Page2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page3Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Page3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page1Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Page1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessOrderServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.ProcessOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoOrderNumberServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.AutoOrderNumberServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GetOrderServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.GetOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetOrderHistoryServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.GetOrderHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Page4Servlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.Page4Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerySimpleCalculatorServlet</servlet-name>
        <url-pattern>/calc</url-pattern>
        <url-pattern>/vsc</url-pattern>
    </servlet-mapping>
