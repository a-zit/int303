<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoggerFilter</filter-name>
        <filter-class>sit.int303.demo.filter.LoggerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>FormCheckerFilter</filter-name>
        <filter-class>sit.int303.demo.filter.FormCheckerFilter</filter-class>
        <init-param>
            <param-name>VIEW</param-name>
            <param-value>Form1.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>id</param-name>
            <param-value>id</param-value>
        </init-param>
        <init-param>
            <param-name>f1</param-name>
            <param-value>f1</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>Form2Checker</filter-name>
        <filter-class>sit.int303.demo.filter.FormCheckerFilter</filter-class>
        <init-param>
            <param-name>VIEW</param-name>
            <param-value>Form2.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>name</param-name>
            <param-value>name</param-value>
        </init-param>
        <init-param>
            <param-name>t3</param-name>
            <param-value>t3</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>sit.int303.demo.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TrailerFilter</filter-name>
        <filter-class>sit.int303.demo.filter.TrailerFilter</filter-class>
        <init-param>
            <param-name>msg</param-name>
            <param-value>Copyright (C) 2018, INT303, SIT, KMUTT</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FormCheckerFilter</filter-name>
        <servlet-name>Form1Servlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoggerFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Form2Checker</filter-name>
        <servlet-name>Form2Servlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>Page2Servlet</servlet-name>
        <servlet-name>Page3Servlet</servlet-name>
        <servlet-name>Page1Servlet</servlet-name>
        <servlet-name>ProcessOrderServlet</servlet-name>
        <servlet-name>GetOrderServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>GetOrderHistoryServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/YourProfile.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TrailerFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/ProductList.jsp</url-pattern>
        <url-pattern>/ViewCart</url-pattern>
        <url-pattern>/YourProfile.jsp</url-pattern>
        <url-pattern>/GetOrderHistory</url-pattern>
        <url-pattern>/GetOrder</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>VerySimpleCalculatorServlet</servlet-name>
        <servlet-class>sit.int303.demo.servlet.VerySimpleCalculatorServlet</servlet-class>
    </servlet>
    <servlet>
